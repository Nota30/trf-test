{
  "name": "file-transfer-cli",
  "version": "1.0.0",
  "description": "Unified CLI for SCP, SFTP, FTP, RSYNC, UDP, QUIC, and UDR file transfers",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "xfer": "./src/cli.ts",
    "file-transfer": "./src/cli.ts"
  },
  "scripts": {
    "start": "bun run src/cli.ts",
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir=dist --target=bun"
  },
  "dependencies": {
    "ssh2": "^1.15.0",
    "basic-ftp": "^5.0.5",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  }
}
